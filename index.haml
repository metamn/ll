---
layout: default
---

#index 
  #intro.block
    .col-1 
      %h1.large
        Learn
        %br 
        English
        %br 
        Online
      %h1.nopad
        with Real People
      %h1.nopad
        in a Virtual City  
    .col-2
      #info
        %iframe{:width => 640, :height => 510, :src => "http://www.youtube.com/embed/U9Pgd0YpOoo", :frameborder => "0" }
        
      
        
    .col-3      
      #info
        {% for teacher in site.categories.teachers reversed limit:3 %}
        #teacher
          %ul.inline-list
            %li.irl
              %img{:src => "{{ teacher.images[1].url }}", :class => 'teachers', :title => "{{ teacher.name }}" }  
            %li.name
              {{ teacher.title }}
              %br
              {{ teacher.country }}
            %li.avatar
              %img{:src => "{{ teacher.images[0].url }}", :class => 'teachers', :title => "{{ teacher.name }}"  }                        
        {% endfor %}
      
      
        
  #features.block
    %table
      %tr
        %td.col-1
          %h1.large
            {% for c in site.categories.comfortable limit:1 offset:1 %}
            {{ c.short }}
            {% endfor %}
        %td.col-2
          {% for c in site.categories.follow-your-interests limit:1 offset:2 %}
          %h4
            {{ c.short }}
          %ul
            {% for l in c.list %}
            %li {{ l | capitalize }}
            {% endfor %}
          {% endfor %}
        %td.col-3
          %h1.large
            {% for c in site.categories.fun limit:1 offset:1 %}
