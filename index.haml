---
layout: default
---

#index 
  #intro.block
    .col-1 
      %h1.large
        Learn
        %br 
        English
        %br 
        Online
      %h1.real
        with Real People
      %h1.virtual
        in a Virtual City  
    .col-2
      #info
        %iframe{:width => 640, :height => 510, :src => "http://www.youtube.com/embed/U9Pgd0YpOoo", :frameborder => "0" }
    .col-3      
      #info
        {% for teacher in site.categories.teachers reversed limit:4 %}
        #teacher
          %ul.inline-list
            %li.avatar
              %img{:src => "{{ teacher.images[0].url }}", :class => 'teachers', :title => "{{ teacher.name }}", :rev => "{{ teacher.images[1].url }}" }                        
            %li.name
              {{ teacher.title }}
              %br
              {{ teacher.country }}            
        {% endfor %}
        
  #features.block
    #comfortable.block
      %ul.inline-list
        {% for c in site.categories.comfortable reversed %}       
        %li{:class => "col col-{{ forloop.index }}"}
          %table.inner
            %tr
              {% for i in c.images %}
              %td
                %img{:src => "{{ i.url }}", :alt => 'aaa'}
              {% endfor %}
          %div{:class => 'triangle triangle-top'}
          #excerpt
            {{ c.excerpt }}
        {% endfor %}
    #follow.block
      %ul.inline-list
        {% for c in site.categories.follow-your-interests reversed %}
        %li{:class => "col col-{{ forloop.index }}"}
          %h4
            {{ c.short }}
          %ul.normal
            {% for l in c.list %}
            %li {{ l | capitalize }}
            {% endfor %}
        {% endfor %}
    #fun.block    
      %ul.inline-list    
        {% for c in site.categories.fun %}
        %li{:class => "col col-{{ forloop.index }}"}        
          %h1.large
            {{ c.short }}
        {% endfor %}        
    

  #cert.block
    %table
      %tr
        {% for cert in site.categories.certificates reversed %}
        %td
          %img{:src => "{{ cert.images[0].url }}", :class => 'certificates'}
        {% endfor %}
          
